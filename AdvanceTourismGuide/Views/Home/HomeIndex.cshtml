
@{
    ViewBag.Title = "HomeIndex";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}


<div id="home" class="slider">
    <div id="main_slider" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#main_slider" data-slide-to="0"></li>
            <li data-target="#main_slider" data-slide-to="1"></li>
            <li data-target="#main_slider" data-slide-to="2"></li>
            <li data-target="#main_slider" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/Content/images/Himal.jpg" alt="slider_img">
                <div class="ovarlay_slide_cont">
                    <h2>mount everest</h2>
                    <h4>Earth's highest mountain</h4>
                    <p>
                        Mount Everest is located in the Mahalangur Himal sub-range of the Himalayas.
                        The international border between Nepal and China runs across its summit point.
                    </p>
                    <a class="blue_bt" href="#">Visit Now</a>
                </div>
            </div>

            <div class="carousel-item ">
                <img class="d-block w-100" src="~/Content/images/lumbini p.jpg" alt="slider_img">
                <div class="ovarlay_slide_cont">
                    <h2>Lumbini Nepal</h2>
                    <h4>Birth place of Lord Buddha</h4>
                    <p>
                        Lumbinī is a Buddhist pilgrimage site in the Rupandehi District. It is the place where,
                        according to Buddhist tradition, Queen Mahamayadevi gave birth to Siddhartha Gautama
                    </p>
                    <a class="blue_bt" href="#">Visit Now</a>
                </div>
            </div>

            <div class="carousel-item ">
                <img class="d-block w-100" src="~/Content/images/supaaa2.jpg" alt="slider_img">
                <div class="ovarlay_slide_cont">
                    <h2>supa deurali</h2>
                    <h4>connected with a myth story of a Lahure</h4>
                    <p>
                        Located in the Arghakhanchi District, in the western part of Nepal, the Supa Deurali 
                        is a mountain temple at an elevation of 1.509m (4,950ft) above the sea level.
                    </p>
                    <a class="blue_bt" href="#">Visit Now</a>
                </div>
            </div>


            <div class="carousel-item">
                <img class="d-block w-100" src="~/Content/images/ranimahal1.jpg" alt="slider_img">
                <div class="ovarlay_slide_cont">
                    <h2>Ranimal</h2>
                    <h4>Taj Mahal of Nepal</h4>
                    <p>Rani Mahal is a Rana palace located in the banks of Kali Gandaki River in Palpa district of Nepal</p>
                    <a class="blue_bt" href="#">Visit Now</a>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#main_slider" role="button" data-slide="prev">
            <img src="~/Content/images/left.png" alt="#" />
        </a>
        <a class="carousel-control-next" href="#main_slider" role="button" data-slide="next">
            <img src="~/Content/images/right.png" alt="#" />
        </a>
    </div>
</div>

