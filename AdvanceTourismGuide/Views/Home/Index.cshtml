@{
    ViewBag.Title = "Welocome to nepal";
}
<style>
    .home1 {
        height: 600px;
        width: 100%;
        background-image: url("/Content/images/9.jpg");
        background-repeat: no-repeat;
        background-size: cover;
        margin-top: -29px;
       /* opacity: 0.7;
        */
    }

    /* .home1:hover
        {
            opacity: 1.0;
            filter: alpha(opacity=100);
        }*/
    .transbox {
        height: 400px;
        width: 60%;
        margin-left: 20%;
        margin-top: 30px;
        background-color: #f60505d6;
        border: 1px solid black;
        opacity: 0.3;
        filter: alpha(opacity=60);
        text-align: center;
        position: relative;
        color: springgreen;
    }
        .transbox:hover {
            opacity: 1.0;
            filter: alpha(opacity=100);

        }
    

        .transbox p {
            font-weight: bold;
            color: white;
            font: caption;
            text-align: center;
            font-size: 4rem;
            font-family:'Times New Roman', Times, serif
        }
</style>

<div class="home1 img-responsive">
    <div class="transbox">
        <p>Welcome To "Visit Nepal"</p>
        <!--start sliding-------------------------------------------------------------------------------------->
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/Content/images/lumbini p.jpg" alt="Lumbini">
                    <div class="carousel-caption">
                        <h1>Lumbini</h1>
                        <h3>Birth place of Lord Buddha, one of the revered figures of history and the founder of Buddhism</h3>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Content/images/ranimahal p.jpg" alt="Ranimahal">
                    <div class="carousel-caption">
                        <h1>Ranimahal</h1>
                        <h3>Also known as the Taj Mahal of Nepal, Rani Mahal was built as the symbol of love</h3>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Content/images/supa p.jpg" alt="Supa deurali">
                    <div class="carousel-caption">
                        <h1>Supa deurali</h1>
                        <h3>Supa Deurali is connected with a myth story of a Lahure “the soldier in Indian army”.</h3>
                    </div>
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <!--end sliding-------------------------------------------------------------------->
    </div>
</div>








