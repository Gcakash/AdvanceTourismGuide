@model IPagedList<AdvanceTourismGuide.Models.Place>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayoutPage.cshtml";
}

@using PagedList;
@using PagedList.Mvc;


<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().City_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Place_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Place_Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Discription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Place_Tag)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Cost_Per_Day)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.City_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Place_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Place_Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Place_Tag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost_Per_Day)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Place_Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Place_Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Place_Id })
            </td>
        </tr>
    }

</table>
@Html.PagedListPager(Model, i => Url.Action("Index","Places", new { i }))
