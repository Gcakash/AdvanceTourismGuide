<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>



    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script>
        //orderEntry_OrderQuantity  this is the id which can be obtain by inspecting the order quantity tex box
        $(document).ready(function () {
            //on quantity change amount
            $("#cost_noOfPeople").keyup(function () {
                people = $("#cost_noOfPeople").val();
                day = $("#cost_noOfDay").val();
                cost = $("#cost_perday").val();
                amount = (people + day) * cost;
                $("cost_total").val(amount);
            });
        });

        $(document).ready(function () {
            //on quantity change amount
            $("#cost_noOfDay").keyup(function () {
                people = $("#cost_noOfPeople").val();
                day = $("#cost_noOfDay").val();
                cost = $("#cost_perday").val();
                amount = (people + day) * cost;
                $("cost_total").val(amount);
            });
        });


    </script>

    <style>
        .nav-back-col {
            background-color: black;
        }
        /* .navColor {
            color: red;}*/

        .SkyFooter {
            background-color: black;
            color: #00a651;
            padding-top: 0px;
            border-top: 1px solid #e7e7e7;
            margin-bottom: 0px;
        }

        .bottom-footer {
            border-top: 1px solid #00a651;
            margin-top: 0px;
            padding-top: 7px;
            color: #00a651;
        }

        .footer-nav li {
            display: inline;
            padding: 0px 40px;
        }

        .row p {
            color: #d4ff0f;
        }

        .footer-nav a {
            color: #d4ff0f;
            text-decoration: none;
        }
    </style>
</head>
